@model IEnumerable<SimpleList.WebUI.Models.OrderViewModel>
@{
    ViewBag.Title = "Order List";
}
@section Breadcrumb {
    <li class="active">Orders</li>
}
<style>
    .table-hover tbody tr:hover {
        background-color: #f0f9ff;
    }
</style>
<section class="clearfix bg-light py-5 dashboardOrders">
    <div class="container">
        @Html.Partial("Partials/_SearchFilter")

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Product Code</th>
                        <th>Product Brand</th>
                        <th>Product Description</th>
                        <th>Product Cost</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.CustomerName</td>
                            <td>@order.ProductCode</td>
                            <td>@order.ProductBrand</td>
                            <td>@order.ProductDescription</td>
                            <td>@order.ProductCost</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
@section Script {
    <!-- Add any additional scripts needed for this view -->
}
@section Header {
    <!-- Add any additional styles or scripts for the header -->
}