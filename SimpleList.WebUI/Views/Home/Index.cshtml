@model List<OrderViewModel>
@{
    ViewBag.Title = "Order list";
}
@section Breadcrumb {
    <li class="active">Orders</li>
}



<section class="clearfix bg-dark dashboardOrders">
    <div class="container">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.Label("Customer Name:")
                        @Html.TextBox("customerName", ViewBag.CustomerName as string, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.Label("Product Code:")
                        @Html.TextBox("productCode", ViewBag.ProductCode as string, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Product Code</th>
                    <th>Brand</th>
                    <th>Product Description</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.CustomerName</td>
                            <td>@order.ProductCode</td>
                            <td>@order.Brand</td>
                            <td>@order.ProductDescription</td>
                            <td>@order.Cost.ToString("C")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No orders found.</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</section>

@section Script {
}

